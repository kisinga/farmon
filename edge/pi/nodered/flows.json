    },
    {
        "id": "webhook-readings",
        "type": "http in",
        "z": "webhook-tab",
        "name": "GET /api/readings",
        "url": "/readings/:device",
        "method": "get",
        "upload": false,
        "swaggerDoc": "",
        "x": 160,
        "y": 180,
        "wires": [["query-readings"]]
    },
    {
        "id": "query-readings",
        "type": "postgresql",
        "z": "webhook-tab",
        "name": "Query Readings",
        "query": "SELECT * FROM readings WHERE device_eui = $1 ORDER BY ts DESC LIMIT 100",
        "postgreSQLConfig": "pg-config",
        "split": false,
        "rowsPerMsg": 1,
        "outputs": 1,
        "x": 380,
