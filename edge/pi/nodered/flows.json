    {
        "id": "parse-uplink",
        "type": "function",
        "z": "farm-flow-tab",
        "name": "Parse Uplink",
        "func": "// Extract device info and payload from ChirpStack v4 event\nconst deviceEui = msg.payload.deviceInfo?.devEui || 'unknown';\nconst deviceName = msg.payload.deviceInfo?.deviceName || 'unknown';\nconst appId = msg.payload.deviceInfo?.applicationId || 'unknown';\n\n// Get decoded data (from codec) or raw base64\nlet data = msg.payload.object || {};\nif (Object.keys(data).length === 0 && msg.payload.data) {\n    // No codec, store raw base64\n    data = { raw: msg.payload.data };\n}\n\n// Add metadata\ndata._rssi = msg.payload.rxInfo?.[0]?.rssi;\ndata._snr = msg.payload.rxInfo?.[0]?.snr;\ndata._fCnt = msg.payload.fCnt;\ndata._fPort = msg.payload.fPort;\ndata._dr = msg.payload.dr;\n\n// Prepare for PostgreSQL - params array for $1, $2\nmsg.params = [deviceEui, JSON.stringify(data)];\n\n// Also keep structured data for downstream nodes\nmsg.deviceEui = deviceEui;\nmsg.deviceName = deviceName;\nmsg.sensorData = data;\n\nnode.status({fill: 'green', shape: 'dot', text: deviceEui.substring(0,8) + '...'});\n\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 330,
        "y": 100,
        "wires": [["store-reading", "check-thresholds", "debug-parsed"]]
    },
    {
        "id": "store-reading",
        "type": "postgresql",
        "z": "farm-flow-tab",
        "name": "Store Reading",
        "query": "INSERT INTO readings (device_eui, data) VALUES ($1, $2::jsonb) RETURNING id",
        "postgreSQLConfig": "pg-config",
        "split": false,
        "rowsPerMsg": 1,
        "outputs": 1,
        "x": 530,
        "y": 80,
        "wires": [["debug-db"]]
    },
    {
        "id": "check-thresholds",
        "type": "function",
        "z": "farm-flow-tab",
        "name": "Check Thresholds",
        "func": "// Example threshold checks\nconst data = msg.sensorData;\nconst alerts = [];\n\n// Water level low\nif (data.water_level !== undefined && data.water_level < 20) {\n    alerts.push({\n        type: 'water_level_low',\n        message: `Water level low: ${data.water_level}%`,\n        device: msg.deviceEui\n    });\n}\n\n// Temperature high\nif (data.temperature !== undefined && data.temperature > 35) {\n    alerts.push({\n        type: 'temperature_high',\n        message: `High temperature: ${data.temperature}Â°C`,\n        device: msg.deviceEui\n    });\n}\n\n// Battery low\nif (data.battery !== undefined && data.battery < 20) {\n    alerts.push({\n        type: 'battery_low',\n        message: `Battery low: ${data.battery}%`,\n        device: msg.deviceEui\n    });\n}\n\nif (alerts.length > 0) {\n    return { payload: alerts, deviceEui: msg.deviceEui };\n}\nreturn null;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 550,
        "y": 140,
        "wires": [["store-alert", "debug-alerts"]]
    },
    {
        "id": "store-alert",
        "type": "function",
        "z": "farm-flow-tab",
        "name": "Format Alert for DB",
        "func": "// Store each alert to database\nconst alerts = msg.payload;\nconst messages = [];\n\nfor (const alert of alerts) {\n    messages.push({\n        params: [alert.device, alert.type, alert.message]\n    });\n}\n\nreturn [messages];",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 750,
        "y": 140,
        "wires": [["store-alert-db"]]
    },
    {
        "id": "store-alert-db",
        "type": "postgresql",
        "z": "farm-flow-tab",
        "name": "Insert Alert",
        "query": "INSERT INTO alerts (device_eui, alert_type, message) VALUES ($1, $2, $3)",
        "postgreSQLConfig": "pg-config",
        "split": false,
        "rowsPerMsg": 1,
        "outputs": 1,
        "x": 950,
        "y": 140,
        "wires": [[]]
    },
