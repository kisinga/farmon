        "y": 100,
        "wires": [["status-response"]]
    },
    {
        "id": "status-response",
        "type": "function",
        "z": "webhook-tab",
        "name": "Build Status",
        "func": "msg.payload = {\n    status: 'ok',\n    timestamp: new Date().toISOString(),\n    service: 'farm-monitor'\n};\nreturn msg;",
        "outputs": 1,
        "timeout": "",
