        "willPayload": "",
        "willMsg": {},
        "userProps": "",
        "sessionExpiry": ""
    },
    {
        "id": "pg-config",
        "type": "postgreSQLConfig",
        "name": "FarmMon DB",
        "host": "postgres",
        "port": "5432",
        "database": "farmmon",
        "ssl": false,
        "user": "farmmon",
        "password": "farmmon",
        "max": "10",
        "min": "1",
        "idle": "1000",
        "connectionTimeout": "10000",
        "requestTimeout": "15000"
    },
    {
        "id": "webhook-tab",
        "type": "tab",
